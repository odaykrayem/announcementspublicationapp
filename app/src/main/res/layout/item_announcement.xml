<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="ltr"
    android:background="@drawable/background_input"
    android:layout_margin="10dp"
    android:padding="4dp"
    >

    <ImageView
        android:id="@+id/img_container"
        android:layout_width="95dp"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:src="@drawable/image_icon"
        android:layout_alignTop="@id/layout"
        android:layout_alignBottom="@id/layout"
        />
    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:orientation="vertical"
        android:layout_toEndOf="@id/img_container"
        android:layout_toStartOf="@id/add_to_favorite"
        android:layout_centerVertical="true"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_margin="4dp"
                android:text="title:"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/ann_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_margin="4dp"
                android:textColor="@color/black"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_margin="2dp"
                android:text="description:"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/ann_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_margin="2dp"
                android:textColor="@color/black"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_margin="2dp"
                android:text="announcer:"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/announcer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_margin="2dp"
                android:textColor="@color/black"
                />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/add_to_favorite"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="Add to \n favourites"
        android:textSize="13sp"
        android:layout_alignTop="@id/layout"
        android:layout_alignBottom="@id/layout"
        />

</RelativeLayout>
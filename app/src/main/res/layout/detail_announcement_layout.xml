<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@color/purple_700"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentTop="true"
            android:src="@drawable/image_icon" />

        <RelativeLayout
            android:id="@+id/layout_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="title:"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ann_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@id/title_txt"
                android:text="title"
                android:textSize="22sp"
                android:textColor="@color/white"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_1"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/age_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="description:"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/ann_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@id/age_txt"
                android:text="Description"
                android:textSize="22sp"
                android:textColor="@color/white"

                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_2"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/announcer_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="announcer name:"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/announcer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@id/announcer_name_txt"
                android:text="announcer_name"
                android:textColor="@color/white"
                android:textSize="22sp"

                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_3"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/price_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="price:"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/ann_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@id/price_txt"
                android:text="price"
                android:textSize="22sp"
                android:textColor="@color/white"

                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_4"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/location_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="location:"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/ann_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@id/location_txt"
                android:text="Location"
                android:textSize="22sp"
                android:textColor="@color/white"
                />

        </RelativeLayout>

    </RelativeLayout>
</androidx.core.widget.NestedScrollView>

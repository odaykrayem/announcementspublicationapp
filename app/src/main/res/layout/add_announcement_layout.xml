<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/purple_700"
        android:orientation="vertical"
        android:padding="10dp"
        tools:context=".interfaces.Subscribe"
        android:layoutDirection="ltr"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" >
            <ImageView
                android:id="@+id/choose_img"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/image_icon"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_input"
                android:scaleType="fitXY"
                />
            <EditText
                android:id="@+id/ann_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:hint="title"
                android:padding="10dp"
                android:background="@drawable/background_input"
                android:inputType="text"
                />
            <EditText
                android:id="@+id/ann_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:hint="description"
                android:padding="10dp"
                android:background="@drawable/background_input"
                android:inputType="text"
                />
            <EditText
                android:id="@+id/ann_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:hint="price"
                android:inputType="number"
                android:padding="10dp"
                android:background="@drawable/background_input"
                />
            <EditText
                android:id="@+id/ann_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:hint="Click to open map"
                android:padding="10dp"
                android:background="@drawable/background_input"
                android:inputType="text"
                android:focusable="false"
                android:clickable="false"
                android:cursorVisible="false"
                />
            <EditText
                android:id="@+id/ann_longitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:hint="longitude"
                android:padding="10dp"
                android:inputType="numberDecimal"
                android:background="@drawable/background_input"
                android:focusable="false"
                android:clickable="false"
                android:cursorVisible="false"
                />
            <EditText
                android:id="@+id/ann_latitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:hint="latitude"
                android:padding="10dp"
                android:inputType="numberDecimal"
                android:background="@drawable/background_input"
                android:focusable="false"
                android:clickable="false"
                android:cursorVisible="false"
                />

            <Button
                android:id="@+id/add"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="40dp"
                android:text="Add Announcement"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/background_button"
                />

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
